<header class="main-header stuck">
    <div class="container">
        <div class="row">
            <div class="col-md-3 col-sm-12 col-xs-12">
                <div class="logo-holder">
                    <a href="~/"><img style="width:158px;" src="~/Content/onyx/images/tikasalogo.png" alt="logo"></a>
                </div>

            </div>
            <div class="col-md-9 col-sm-12 col-xs-12">
                <div id="mainmenu">
                    <div id="menu-button">Menu</div>
                    <ul>
                        <li>
