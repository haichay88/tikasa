                        </li>
                        <li>
                            <a href="#">Website</a>
                        </li>

                        <li>
                            <a href="#">Tên miền</a>
                        </li>
                        @if (!Model.IsLogined)
                        {
                            <li>
                                <a data-toggle="modal" href="#loginModal"><span class="ti-lock"></span> Đăng nhập</a>
                            </li>
                            <li>
                                <a href="#registerModal" data-toggle="modal"><span class="ti-user"></span> Đăng Ký</a>
                            </li>
                        }
                        else
                        {
                            <li class="has-sub">
                                <span class="submenu-button"></span>
                                <span class="submenu-button"></span>
